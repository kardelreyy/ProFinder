<?xml version="1.0" encoding="utf-8"?>
<!--all-->
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/postedJobCard"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    android:padding="10dp"
    android:background="@drawable/card_border"
    app:cardElevation="20dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/employJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:text="JOB TITLE"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/employStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:text="Status"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingBottom="3dp"
                android:background="@drawable/searchbar_bg"
                android:backgroundTint="@color/theme"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/employBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/outline_location_on_24"
                android:text="Branch"
                android:textColor="@color/darksubtext"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/employDatePosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"
                android:text=" Date Posted"
                android:textAlignment="textEnd"
                android:textColor="@color/lightsubtext"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightsubtext"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Applicants:"
                android:textColor="@color/darksubtext"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/employTotalApplicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:layout_marginLeft="3dp"
                android:textColor="@color/lightsubtext"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="Rejected:"
                android:textColor="@color/darksubtext"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/employRejectNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:layout_marginLeft="3dp"
                android:textColor="@color/lightsubtext"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="Accepted:"
                android:textColor="@color/darksubtext"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/employAcceptNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:layout_marginLeft="3dp"
                android:textColor="@color/lightsubtext"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>