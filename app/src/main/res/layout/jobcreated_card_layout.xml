<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jobCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    android:background="@drawable/card_border"
    app:cardElevation="20dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/homeJobTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:text="JOB TITLE"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/editJob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:text="EDIT JOB"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

<!--                    <ImageButton
                        android:id="@+id/bookmarkBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icons8_bookmark"
                        android:padding="8dp"
                        android:background="@color/white"
                        >
                    </ImageButton>-->
                </LinearLayout>

                <TextView
                    android:id="@+id/homeCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:text="Company Name"
                    android:textColor="#655C5C"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/homeSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Salary Range"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/homeJobLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Location"
                android:textColor="@color/lightsubtext"
                android:textSize="16sp"
                android:drawableStart="@drawable/outline_location_on_24"
                android:drawablePadding="9dp"/>

            <TextView
                android:id="@+id/homeJobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:text="Job Type"
                android:textColor="@color/lightsubtext"
                android:textSize="16sp"
                android:drawableStart="@drawable/baseline_work_outline_24"
                android:drawablePadding="9dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

