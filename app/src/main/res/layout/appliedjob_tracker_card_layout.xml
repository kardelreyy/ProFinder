<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appliedJobCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="12dp"
    android:background="@drawable/card_border"
    app:cardElevation="20dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/applyJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="2dp"
                    android:text="JOB TITLE"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/applyCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:text="Company Name"
                    android:textColor="@color/darksubtext"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="10dp"
                android:src="@drawable/outline_cancel_24"
                android:tint="@color/theme"
                android:tooltipText="Cancel Application">
            </ImageButton>
        </LinearLayout>

        <TextView
            android:id="@+id/applySalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:drawablePadding="9dp"
            android:text="Salary Range"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/applyJobLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:layout_marginBottom="3dp"
                android:paddingRight="20dp"
                android:text="Location"
                android:textColor="@color/lightsubtext"
                android:textSize="17sp"
                android:drawableLeft="@drawable/outline_location_on_24"
                android:drawablePadding="7dp"/>

            <TextView
                android:id="@+id/applyJobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:text="Job Type"
                android:textColor="@color/lightsubtext"
                android:textSize="17sp"
                android:drawableLeft="@drawable/baseline_work_outline_24"
                android:drawablePadding="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Application Status:"
                android:textColor="@color/darksubtext"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/applyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Status"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingBottom="3dp"
                android:background="@drawable/searchbar_bg"
                android:backgroundTint="@color/theme"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>