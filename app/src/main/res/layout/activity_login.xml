<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/theme"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="?actionBarSize"
        android:layout_marginEnd="?actionBarSize"
        android:alpha="0.5"
        android:background="@drawable/rounded_login_ui"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="add"
        android:elevation="60dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/op"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LoginTV"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:textAlignment="textEnd">

                <TextView
                    android:id="@+id/emallLoginTV"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:text="Email:"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/enterEmailLogin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="email@domain.com"
                    android:inputType="text"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textColorHint="#615252"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/passwordLoginTV"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:text="Password:"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/enterPasswordLogin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Password"
                    android:inputType="text"
                    android:password="true"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textColorHint="#615252"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/confirmLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#1B2142"
                android:text="Confirm"
                android:textColorHighlight="#1B2142" />

            <TextView
                android:id="@+id/signUpAccTV"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:onClick="goSignup"
                android:text="No Account yet? Sign Up now"
                android:textAlignment="center"
                android:textColor="#0082D8"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>